<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!-- Определение сервлета ControllerServlet -->
  <servlet>
    <servlet-name>ControllerServlet</servlet-name>
    <servlet-class>serverlets.ControllerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControllerServlet</servlet-name>
    <url-pattern>/ControllerServlet</url-pattern>
  </servlet-mapping>

  <!-- Определение сервлета AreaCheckServlet -->
  <servlet>
    <servlet-name>AreaCheckServlet</servlet-name>
    <servlet-class>serverlets.AreaCheckServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AreaCheckServlet</servlet-name>
    <url-pattern>/areaCheckServlet</url-pattern>
  </servlet-mapping>
</web-app>
